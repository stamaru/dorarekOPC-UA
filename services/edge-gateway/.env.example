# OPC-UA Server Configuration
OPCUA_ENDPOINT=opc.tcp://localhost:4840
OPCUA_APPLICATION_NAME=EdgeGatewayOPCUAClient
OPCUA_APPLICATION_URI=urn:EdgeGateway:OPCUAClient

# Security Settings (for production use)
# OPCUA_SECURITY_MODE=SignAndEncrypt
# OPCUA_SECURITY_POLICY=Basic256Sha256
# OPCUA_CERTIFICATE_FILE=./certs/client_cert.pem
# OPCUA_PRIVATE_KEY_FILE=./certs/client_key.pem

# Monitoring Configuration
OPCUA_SAMPLING_INTERVAL=1000
OPCUA_PUBLISHING_INTERVAL=1000

# Machinery Specific Node IDs (examples)
# OPCUA_MACHINERY_STATE_NODE=ns=2;s=MachineryItemState.CurrentState
# OPCUA_MACHINERY_ERROR_NODE=ns=2;s=MachineryItemState.ErrorCode

# Video Trigger Configuration
VIDEO_PRE_RECORD_SECONDS=30
VIDEO_POST_RECORD_SECONDS=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/edge-gateway.log