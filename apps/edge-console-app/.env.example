# Application Configuration
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# OPC-UA Configuration
OPCUA_SERVER_URL=opc.tcp://localhost:4840
OPCUA_CLIENT_NAME=EdgeConsoleClient
OPCUA_CONNECTION_TIMEOUT=10000
OPCUA_REQUEST_TIMEOUT=5000

# Video Processing Configuration
VIDEO_BUFFER_SIZE_SECONDS=300
VIDEO_CLIP_PRE_SECONDS=30
VIDEO_CLIP_POST_SECONDS=30
VIDEO_ENCODING=h264

# Storage Configuration
STORAGE_MAX_SIZE_GB=100
STORAGE_CLEANUP_INTERVAL_HOURS=24
EVENT_RETENTION_DAYS=30

# Cloud Configuration
CLOUD_PROVIDER=aws
CLOUD_UPLOAD_ENABLED=true
CLOUD_UPLOAD_RETRY_ATTEMPTS=3
CLOUD_UPLOAD_RETRY_DELAY_MS=5000

# System Monitor Configuration
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=80
MONITOR_DISK_THRESHOLD=90
MONITOR_CHECK_INTERVAL_SECONDS=60

# Security Configuration
ENABLE_HTTPS=false
SSL_KEY_PATH=
SSL_CERT_PATH=